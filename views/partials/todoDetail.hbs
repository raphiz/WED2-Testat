<!--for each todo this is the layout-->
<article>
    <div class="main" xmlns="http://www.w3.org/1999/html">
        <div class="todoDetails">
            <div class="todoTitle">{{this.title}}</div>
            <p class="todoImportance">{{this.importance}}</p>
            <textarea class="todoDescription" rows="4" readonly>{{this.description}}</textarea>
        </div>
        <div class="todoStatus">
            <p>Fertig: <input type="checkbox" name="complete" id="chkErledigt" {{#if this.complete}}checked{{/if}} disabled></p>
            <p>{{#if this.complete}}{{else}}{{formatDate this.duedate}}{{/if}}</p>
        </div>
    </div>
    <div class="options">
        <a href="/edit/{{this._id}}" class="button" id="btnEdit">Edit</a>
    </div>
</article>
